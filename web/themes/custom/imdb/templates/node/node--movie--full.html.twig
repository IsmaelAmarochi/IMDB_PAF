<article{{attributes.addClass('article')}}>
	<div{{content_attributes}} class="full-body">
		<div
			class="body-left">
			<div class="title">
				<h1>{{ content.field_title }}</h1>
			</div>
			<div class="desc">{{ content.field_description }}</div>
			<div class="dir">
				<p>Directed by,
					<a href=" {{ url }}">{{ content.field_director }}</a>. 
						                This movie belong to the
					<div class="genre">{{ content.field_genre }}</div>genre.</p>
			</div>
		</div>
		<div
			class="body-right">
			<img class="movie-image" src="{{ file_url(node.field_movie_image.entity.fileuri) }}" alt="">
		</div>
	</div>
	<div>
	{{ { '#type': 'webform', '#webform': 'movie_question' } }}
	</div>
</article>