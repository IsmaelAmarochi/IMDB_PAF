{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title }}
	{{ title_suffix }}

	{% if header %}
		<header>
			{{ header }}
		</header>
	{% endif %}

	<div class="exposed-filter container-80-mb" data-aos="fade-up">{{ exposed }}</div>


	{{ attachment_before }}

	{% if rows -%}
		<div class="row " data-aos="fade-up" data-aos-anchor-placement="center-bottom">
			{{ rows }}
		</div>
	{% elseif empty -%}
		{{ empty }}
	{% endif %}
	{{ pager }}

	{{ attachment_after }}
	{{ more }}

	{% if footer %}
		<footer>
			{{ footer }}
		</footer>
	{% endif %}

	{{ feed_icons }}
</div>
