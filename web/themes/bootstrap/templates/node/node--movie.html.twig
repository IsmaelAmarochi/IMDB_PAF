{%
  set classes = [
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}
<article{{ attributes.addClass(classes) }}>
  <div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="">

                <h3 class="mb-1">{{ node.field_title.fielddefinition.label }}</h3>
                <h4 class="mt-0">{{ content.field_title  }}</h4>

                <h3 class="mb-1">{{ node.field_description.fielddefinition.label }}</h3>
                <h4 class="mt-0" style=" font-size: 1.5rem;">{{ content.field_description }}</h4>

                <h3 class="mb-1">{{ node.field_director.fielddefinition.label }}</h3>
                <h4 class="mt-0">{{ content.field_director }}</h4>

                <h3 class="mb-1"{{node.field_genre.fielddefinition.label}}</h3>
                <h4 class="mt-0">{{ content.field_genre }}</h4>

            <div class=''> <button type="button" class="btn btn-secondary mx-auto" data-toggle="modal" data-target="#exampleModal"> Share on social media </button> </div>
            </div>
        </div>

        <div class="col-md-7">
            <img src="{{ file_url(content.field_movie_image['#items'][0].entity.uri.value) }}" alt="project-image" class="rounded">
        </div><!-- / column -->
    </div>
</div>

</article>


